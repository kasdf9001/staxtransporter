; {{ ansible_managed }}

[{{ stackid }}]
listen = /var/run/php-fpm-site.sock
user = {{ user }}
group = {{ user }}
pm = dynamic
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
pm.max_children = {{ base_php_fpm_max_children }}
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 2
chdir = /srv
php_admin_value[open_basedir] = /srv:/tmp
